<h1>The Tech Blog</h1>

{{#if posts.length}}
  {{#each posts as |post|}}
    <div class='row mb-4 post'>
      <div class='col-md-5'>
        <h2>
          <!-- Call a helper function for displaying an emoji -->
          {{{get_emoji}}}
          <a href='/post/{{post.id}}'>{{post.title}}</a>
        </h2>
        <p>
          <!-- Use Handlebars helper for formatting date -->
          Created on
          {{format_date post.createdAt}}
        </p>
      </div>
      <div class='col-md-7'>
        <p>
          {{post.content}}
        </p>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No blog posts available.</p>
{{/if}}