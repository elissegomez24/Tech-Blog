<h1>The Tech Blog</h1>

{{#if posts.length}}
  <div class='post-list'>
    {{#each posts as |post|}}
      <div class='row mb-4 post'>
        <div class='col-md-5'>
          <h2>
            <a href='/post/{{post.id}}'>{{post.title}}</a>
          </h2>
          <p>Created by
            {{user.username}}
            on
            {{format_date post.createdAt}}</p>
        </div>
        <div class='col-md-7'>
          <p>{{post.content}}</p>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No blog posts available.</p>
{{/if}}