<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Dashboard</title>
  </head>
  <body>
    <h1>Your Dashboard</h1>
    {{#if posts.length}}
      {{#each posts}}
        <div>
          <h2>{{this.title}}</h2>
          <p>{{this.content}}</p>
          <!-- Link to view the post -->
          <a href='/post/{{this.id}}'>View Post</a>
        </div>
      {{/each}}
    {{else}}
      <p>No posts yet. Create one!</p>
    {{/if}}

    <a href='/create-post'>Create New Post</a>
  </body>
</html>